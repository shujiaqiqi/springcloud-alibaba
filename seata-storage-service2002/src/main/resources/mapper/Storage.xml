<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ch.mapper.StorageMapper">


    <update id="decrease">

        update t_storage set total = #{newTotal}, residue = #{newTotal}, used = #{newUsed} where id = #{id}
    </update>


    <select id="selectProductById" resultType="com.ch.entity.Storage">

        select * from t_storage where id = #{id}
    </select>
</mapper>