<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ch.mapper.AccountMapper">

    <update id="decrease">

        update t_account set total = #{newTotal}, residue = #{newTotal}, used = #{newUsed} where user_id = #{userId}
    </update>


    <select id="selectAccountByUserId" resultType="com.ch.entity.Account">

        select * from t_account where user_id = #{userId}
    </select>
</mapper>